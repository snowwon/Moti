<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.zoo9.moti" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateBoardActivity"
            android:label="@string/title_activity_create_board"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".DeleteBoardActivity"
            android:label="@string/title_activity_delete_board"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ManageBoardsActivity"
            android:label="@string/title_activity_manage_boards"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".GuideForCreationActivity" >
        </activity>
    </application>

</manifest>
